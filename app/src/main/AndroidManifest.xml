        <activity
            android:name=".chat.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.AddClient"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.ProductListActivity"
