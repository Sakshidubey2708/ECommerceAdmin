        <activity
            android:name=".activity.ViewSubCatagoryActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.ViewUsers"
            android:theme="@style/AppTheme.NoActionBar"></activity>
