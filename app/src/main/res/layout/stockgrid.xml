<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="7dp">

            <!--//Categories card view Start Dashboard-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_gravity="center|center_horizontal"
                app:cardCornerRadius="8dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/imgelinkText"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@mipmap/product" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:text="Stock Detail"
                                android:layout_gravity="center|center_horizontal"
                                android:layout_weight="1"
                                android:textStyle="normal"
                                android:textSize="15sp"
                                android:gravity="center|center_horizontal"
                                android:textColor="@color/blue"
                                android:fontFamily="serif" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/productNames"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:hint="Product Name"
                                android:gravity="left|center_horizontal"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#ca5555"
                                android:paddingLeft="10dp"
                                android:fontFamily="serif" />

                            <TextView
                                android:id="@+id/productDescriptions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Product Description"
                                android:layout_gravity="left"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#ca5555"
                                android:gravity="left|center_horizontal"
                                android:paddingLeft="10dp"
                                android:fontFamily="serif" />

                            <TextView
                                android:id="@+id/product_ids"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/stock_ids"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/requestlayoutlayer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center|center_horizontal"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Do you want to sent a Request for a price ?"
                            android:layout_gravity="center_horizontal|center"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#345b1c"
                            android:gravity="center|center_horizontal"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />

                        <Button
                            android:id="@+id/requestBtn"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:text="request"
                            android:textAllCaps="false"
                            android:padding="3dp"
                            android:visibility="visible"
                            android:background="@drawable/button_shape_rounded"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/description" />


                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/showAmounts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Product Price"
                            android:layout_weight="1"
                            android:gravity="left|center_horizontal"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />

                        <TextView
                            android:id="@+id/salesPrice"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:hint="Product Name"
                            android:layout_weight="1"
                            android:gravity="left|center_horizontal"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#0a0909"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Product Discount"
                            android:layout_weight="1"
                            android:gravity="left|center_horizontal"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />

                        <TextView
                            android:id="@+id/DiscountPrice"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:hint="Discount"
                            android:layout_gravity="left"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#ca5555"
                            android:gravity="left|center_horizontal"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Quantity"
                            android:layout_weight="1"
                            android:gravity="left|center_horizontal"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />

                        <TextView
                            android:id="@+id/stockQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:hint="Select Qty"
                            android:layout_gravity="left"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:textColor="#ca5555"
                            android:gravity="left|center_horizontal"
                            android:paddingLeft="10dp"
                            android:fontFamily="serif" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <Button
                            android:id="@+id/btnShow"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="You Want to place order ? click here."
                            android:textAllCaps="false"
                            android:padding="3dp"
                            android:background="@color/white"
                            android:textColor="@color/green"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/description" />
                    </LinearLayout>


                </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--//Categories card view Start Dashboard-->


        </LinearLayout>

        <Button
            android:id="@+id/BtnDone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Done"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</LinearLayout>