<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittext_shape">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Dispatch Detail"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="15sp"
            android:gravity="center|center_horizontal"
            android:background="@drawable/edittext_shape"
            android:textColor="@color/blue"
            android:fontFamily="serif"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/orderNo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="Order No."
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#ca5555"
            android:gravity="center|center_horizontal"
            android:fontFamily="serif"/>

        <TextView
            android:id="@+id/gstinNo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="12sp"
            android:gravity="center|center_horizontal"
            android:text="Gstin No."
            android:textColor="#ca5555"
            android:fontFamily="serif" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Firm Detail"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="14sp"
                android:gravity="center_horizontal|center"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/blue"
                android:fontFamily="serif"/>

        </LinearLayout>



        <View
            android:layout_width="1000dp"
            android:layout_height="1dp"
            android:background="#bcb6b6"/>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/FirmNAme"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="FirmNAme"
            android:layout_gravity="center|center_horizontal"

            android:textStyle="normal"
            android:textSize="11sp"
            android:textColor="#181717"
            android:gravity="center|center_horizontal"
            android:fontFamily="serif"/>

        <TextView
            android:id="@+id/FirmownerName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center|center_horizontal"
            android:text="First Name"
            android:textColor="#181717"
            android:fontFamily="serif" />
        <TextView
            android:id="@+id/FirmownerContact"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center|center_horizontal"
            android:text="Firm Contact"
            android:textColor="#181717"
            android:fontFamily="serif" />
        <TextView
            android:id="@+id/FirmEmail"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center|center_horizontal"
            android:text="Firm Email"
            android:textColor="#181717"
            android:fontFamily="serif" />
        <TextView
            android:id="@+id/FirmAddress"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="11sp"
            android:gravity="center|center_horizontal"
            android:text="Firm Address"
            android:textColor="#181717"
            android:fontFamily="serif" />
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/CityName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:hint="City Name"
                android:layout_gravity="center|center_horizontal"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textColor="#ca5555"
                android:gravity="center|center_horizontal"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/StateNAme"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center|center_horizontal"
                android:textStyle="normal"
                android:textSize="11sp"
                android:gravity="center|center_horizontal"
                android:text="State NAme"
                android:textColor="#ca5555"
                android:fontFamily="serif" />
            <TextView
                android:id="@+id/CityCode"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center|center_horizontal"
                android:textStyle="normal"
                android:textSize="11sp"
                android:gravity="center|center_horizontal"
                android:text="City Code"
                android:textColor="#ca5555"
                android:fontFamily="serif" />
            <TextView
                android:id="@+id/PinCode"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center|center_horizontal"
                android:textStyle="normal"
                android:textSize="11sp"
                android:gravity="center|center_horizontal"
                android:text="Pin Code"
                android:textColor="#ca5555"
                android:fontFamily="serif" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Customer Detail"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="14sp"
                android:gravity="center_horizontal|center"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/blue"
                android:fontFamily="serif"/>

        </LinearLayout>


        <View
            android:layout_width="1000dp"
            android:layout_height="1dp"
            android:background="#bcb6b6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/Registrationdate"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Registration Date"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#486c03"
                    android:gravity="center|center_horizontal"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/ContactPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="First Name"
                    android:textColor="#181717"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/ContactNo"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Firm Contact"
                    android:textColor="#181717"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/ContactEmail"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Firm Email"
                    android:textColor="#181717"
                    android:fontFamily="serif" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/Dispatch_Date"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="Dispatch Date"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#ca5555"
                    android:gravity="center|center_horizontal"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/business"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="ContactPerson Business"
                    android:textColor="#181515"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/ContactPersonAdress"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Address"
                    android:textColor="#0d0c0c"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/CPPinCode"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Pin Code"
                    android:textColor="#0d0c0c"
                    android:fontFamily="serif" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Transportation Detail"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="14sp"
                android:gravity="center_horizontal|center"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/blue"
                android:fontFamily="serif"/>

        </LinearLayout>
        <View
            android:layout_width="1000dp"
            android:layout_height="1dp"
            android:background="#bcb6b6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/Date"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Registration Date"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#486c03"
                    android:gravity="center|center_horizontal"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/dispatchId"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/DriverName"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Driver Name"
                    android:textColor="#181717"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/driverContact"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="driver Contact"
                    android:textColor="#181717"
                    android:fontFamily="serif" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Firm Email"
                    android:textColor="#181717"
                    android:fontFamily="serif" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/Vehicle_no"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="Vehicle No."
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#ca5555"
                    android:gravity="center|center_horizontal"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/Vehicle_address"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center|center_horizontal"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:gravity="center|center_horizontal"
                    android:text="Vehicle Address"
                    android:textColor="#181515"
                    android:fontFamily="serif" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/green"
            android:text="Download"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_file_download_black_24dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="5dp"/>

    </LinearLayout>
</RelativeLayout>
